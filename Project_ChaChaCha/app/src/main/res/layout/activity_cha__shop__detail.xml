<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".template.src.Shopdetatil.ShopDetail"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/shoptitle"
            android:layout_width="167dp"
            android:layout_height="24dp"
            android:text="가게이름"
            android:textSize="18sp"
            android:textColor="#222B45"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_empty_star"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11.3dp"
            android:layout_marginEnd="13.3dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff1f3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:background="#BEBDBD"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/shopdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="296dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/style_shop"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shoptitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18.7dp"
                    android:layout_marginTop="15dp"
                    android:text="상수리바"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/moodtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18.7dp"
                    android:layout_marginTop="7.7dp"
                    android:gravity="end"
                    android:lineSpacingExtra="4sp"
                    android:textColor="#ff7889"
                    android:textSize="10sp"
                    tools:text="#조용한 #한잔하기_좋은" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18.7dp"
                    android:layout_marginTop="4.7dp"
                    android:lineSpacingExtra="4sp"
                    android:text="좋은 친구와 잔을 부딪히는 횟수와 행복은 비례한다고 생각합니다. "
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18.7dp"
                    android:layout_marginTop="12.7dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="5.5dp"
                        android:src="@drawable/ic_mark" />

                    <TextView
                        android:id="@+id/shopAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="4sp"
                        android:textColor="#656565"
                        android:textSize="10sp"
                        tools:text="서대문구 창천동 510-2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18.7dp"
                    android:layout_marginTop="7.3dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="5.5dp"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:id="@+id/shoptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="4sp"
                        android:textColor="#656565"
                        android:textSize="10sp"
                        tools:text="오후 05:00 - 오전 02:00 (월요일 휴무)" />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/call"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_call"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="271dp"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/message"
                android:src="@drawable/ic_message"
                android:layout_toRightOf="@id/call"
                android:layout_marginStart="-90dp"
                android:layout_marginTop="271dp"/>

            <RelativeLayout
                android:layout_below="@id/shopdetail"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/style_shop">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="10dp"
                        android:text="더 많은 정보 보기" />
                    <ImageView
                        android:id="@+id/moreinfo"
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_path"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/goto_review"
                android:layout_width="145dp"
                android:layout_height="42dp"
                android:text="리뷰 쓰러가기"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/style4"
                android:layout_marginBottom="22dp"/>
        </RelativeLayout>
    </FrameLayout>


</LinearLayout>