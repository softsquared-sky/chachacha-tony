<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".template.src.Register.Register_customer"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="167dp"
            android:layout_height="24dp"
            android:text="회원가입"
            android:textSize="18sp"
            android:textColor="#222B45"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="22dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="39dp"
                android:layout_height="16dp"
                android:textColor="#222B45"
                android:textSize="14sp"
                android:text="아이디"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:singleLine="true"
                    android:nextFocusDown="@id/userpw"
                    android:id="@+id/userid"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="아이디 입력"
                    android:backgroundTint="#00ffffff"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="필수"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="#99FF0000"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="비밀번호"
                android:textColor="#222B45"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:id="@+id/userpwline"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:id="@+id/userpw"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="#00ffffff"
                    android:hint="비밀번호 입력"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/userpw2"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="필수"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="#99FF0000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/userpw2line"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:id="@+id/userpw2"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="#00ffffff"
                    android:hint="비밀번호 재입력"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/name"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="필수"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="#99FF0000"/>
            </LinearLayout>

            <TextView
                android:id="@+id/pwcomment"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:textColor="#99FF0000"
                tools:text="비밀번호가 일치하지 않습니다."
                android:gravity="center"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="성명"
                android:textColor="#222B45"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:singleLine="true"
                    android:nextFocusDown="@id/email"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:backgroundTint="#00ffffff"
                    android:hint="이름 입력"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="필수"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="#99FF0000"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="이메일"
                android:textColor="#222B45"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:singleLine="true"
                    android:nextFocusDown="@id/phone"
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:backgroundTint="#00ffffff"
                    android:hint="이메일 입력"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="필수"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="#99FF0000"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="전화번호"
                android:textColor="#222B45"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:singleLine="true"
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:backgroundTint="#00ffffff"
                    android:hint="'-'구분없이 입력"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="필수"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="#99FF0000"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="나이"
                android:textColor="#222B45"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <View
                    android:layout_width="27dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/age_btn1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/age_button_background"
                    android:text="20대"
                    android:textSize="14sp"
                    android:textColor="@drawable/age_button_color"
                    android:onClick="ageClick"/>
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/age_btn2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/age_button_background"
                    android:text="30대"
                    android:textColor="@drawable/age_button_color"
                    android:onClick="ageClick"/>
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/age_btn3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/age_button_background"
                    android:textSize="14sp"
                    android:text="40대"
                    android:textColor="@drawable/age_button_color"
                    android:onClick="ageClick" />
                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/age_btn4"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@drawable/age_button_background"
                    android:textSize="14sp"
                    android:text="50대 이상"
                    android:textColor="@drawable/age_button_color"
                    android:onClick="ageClick"/>
                <View
                    android:layout_width="27dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="성별"
                android:textColor="#222B45"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="48dp">
                <View
                    android:layout_width="27dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/gender_woman"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/age_button_background"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@drawable/age_button_color"
                    android:text="여"
                    android:onClick="genderClick"/>
                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/gender_man"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/age_button_background"
                    android:textColor="@drawable/age_button_color"
                    android:textSize="14sp"
                    android:text="남"
                    android:onClick="genderClick"/>
                <View
                    android:layout_width="27dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/next"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:text="다음"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="@drawable/style4"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="22dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>