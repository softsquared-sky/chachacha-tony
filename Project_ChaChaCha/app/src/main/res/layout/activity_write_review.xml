<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".template.src.myChaShopDetail.WriteReview"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        <ImageView
            android:id="@+id/writeReview_iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/writeReview_tv_title"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            tools:text="가게이름"
            android:textSize="18sp"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/Title_Color"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/writeReview_tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/writeReview_commit"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/writeReview_write"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/main"/>
        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:background="@color/main"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        android:background="@drawable/background_shadow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="27dp">
            <ImageView
                android:onClick="starClick"
                android:id="@+id/writeReview_iv_star1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_grey50"
                tools:ignore="ContentDescription" />
            <ImageView
                android:onClick="starClick"
                android:id="@+id/writeReview_iv_star2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_grey50"
                tools:ignore="ContentDescription" />
            <ImageView
                android:onClick="starClick"
                android:id="@+id/writeReview_iv_star3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_grey50"
                tools:ignore="ContentDescription" />
            <ImageView
                android:onClick="starClick"
                android:id="@+id/writeReview_iv_star4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_grey50"
                tools:ignore="ContentDescription" />
            <ImageView
                android:onClick="starClick"
                android:id="@+id/writeReview_iv_star5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_grey50"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <EditText
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/Transparent"
            android:hint="@string/writeReview_hint"
            android:gravity="top"
            android:textSize="11.3sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            tools:ignore="Autofill,SmallSp" />
    </LinearLayout>

</LinearLayout>