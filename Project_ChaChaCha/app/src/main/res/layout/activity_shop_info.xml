<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".template.src.ShopInfo.ShopInfo"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/shoptitle"
                android:layout_width="167dp"
                android:layout_height="24dp"
                android:text="가게이름"
                android:textSize="18sp"
                android:textColor="#222B45"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/star"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_empty_star"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="11.3dp"
                android:layout_marginEnd="13.3dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-4dp">
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:onClick="menuClick"
                    android:id="@+id/btn_menu"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="메뉴"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@drawable/shop_info_button"/>
                <View
                    android:id="@+id/menuview"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/shop_info_tab_press"/>
            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:orientation="vertical">
                <TextView
                    android:onClick="menuClick"
                    android:id="@+id/btn_review"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="리뷰"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@drawable/shop_info_button"/>
                <View
                    android:id="@+id/reviewview"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/shop_info_tab_press"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fragment_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/background_shadow">

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>



    <Button
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:text="여기로 차차차!"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/style4"
        android:layout_marginBottom="22dp"/>

</RelativeLayout>