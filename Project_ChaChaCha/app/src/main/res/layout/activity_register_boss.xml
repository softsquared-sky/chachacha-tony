<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".template.src.register.RegisterBossActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/registerBoss_iv_next"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="167dp"
            android:layout_height="24dp"
            android:text="@string/register_title"
            android:textSize="18sp"
            android:textColor="@color/Title_Color"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
            <TextView
                android:layout_width="39dp"
                android:layout_height="16dp"
                android:textColor="#222B45"
                android:textSize="14sp"
                android:text="@string/common_id"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:singleLine="true"
                    android:nextFocusDown="@id/registerBoss_edt_userPw"
                    android:id="@+id/registerBoss_edt_userId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="@string/register_userIdHint"
                    android:backgroundTint="@color/Transparent"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/register_mandatory"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="@color/Text_Mandatory"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="@string/common_password"
                android:textColor="@color/Title_Color"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:id="@+id/registerBoss_edt_userPw"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="#00ffffff"
                    android:hint="@string/register_userPwHint"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/registerBoss_edt_userPwCheck"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/register_mandatory"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="@color/Text_Mandatory"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/registerBoss_view_userPwCheck"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:id="@+id/registerBoss_edt_userPwCheck"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="#00ffffff"
                    android:hint="@string/register_userPwCheckHint"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/registerBoss_edt_name"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/register_mandatory"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="@color/Text_Mandatory"/>
            </LinearLayout>
            <TextView
                android:id="@+id/registerBoss_tv_pwComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#99FF0000"
                tools:text="비밀번호가 일치하지 않습니다."
                android:gravity="center"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="@string/common_name"
                android:textColor="@color/Title_Color"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:inputType="text"
                    android:singleLine="true"
                    android:nextFocusDown="@id/registerBoss_edt_phone"
                    android:id="@+id/registerBoss_edt_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:backgroundTint="#00ffffff"
                    android:hint="@string/register_userNameHint"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/register_mandatory"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="@color/Text_Mandatory"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="14sp"
                android:text="@string/common_phone2"
                android:textColor="#222B45"
                android:layout_marginStart="37dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/style3"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="27dp">
                <EditText
                    android:singleLine="true"
                    android:id="@+id/registerBoss_edt_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:backgroundTint="#00ffffff"
                    android:hint="@string/register_phoneHint"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/register_mandatory"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="14dp"
                    android:textColor="@color/Text_Mandatory"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/registerBoss_btn_next"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:text="@string/common_next"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/style4"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="22dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>